@model IEnumerable<Tuan06.Models.Cart>
@{
    ViewData["Title"] = "Quản lý chi tiết giỏ hàng";
}

<h2>Quản lý Chi tiết Giỏ hàng</h2>

<form method="get" class="d-flex mb-3">
    <input type="hidden" name="userId" value="@ViewBag.UserId" />
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm theo tên sản phẩm..." class="form-control me-2" />
    <button class="btn btn-primary">Tìm</button>
</form>

<a asp-action="DeleteInactiveUsers" class="btn btn-danger mb-3">Xóa sản phẩm của user bị khóa</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">Không có sản phẩm nào trong giỏ.</div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Khách hàng</th>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Ngày thêm</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User?.FullName</td>
                    <td>@item.Product?.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-userId="@item.UserID" asp-route-productId="@item.ProductID" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-userId="@item.UserID" asp-route-productId="@item.ProductID" class="btn btn-danger btn-sm"
                           onclick="return confirm('Xóa sản phẩm này khỏi giỏ hàng?')">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewBag.Search" asp-route-userId="@ViewBag.UserId">@i</a>
                </li>
            }
        </ul>
    </nav>
}
