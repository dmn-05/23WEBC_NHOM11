@model Tuan06.Models.Cart
@{
    ViewData["Title"] = "Sửa chi tiết giỏ hàng";
}

<h2>Sửa Chi tiết Giỏ hàng</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="UserID" />
    <input type="hidden" asp-for="ProductID" />

    <div class="mb-3">
        <label>Khách hàng</label>
        <input value="@Model.User?.FullName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Sản phẩm</label>
        <input value="@Model.Product?.ProductName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label>Số lượng</label>
        <input asp-for="Quantity" type="number" min="1" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
