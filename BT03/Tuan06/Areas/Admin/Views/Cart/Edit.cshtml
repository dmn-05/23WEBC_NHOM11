@model Tuan06.Models.Cart
@{
    ViewData["Title"] = "Sửa giỏ hàng";
}

<h2 class="mb-3">Sửa giỏ hàng</h2>

<form asp-action="Edit" method="post">
    <!-- Composite key -->
    <input type="hidden" asp-for="UserID" />
    <input type="hidden" asp-for="ProductID" />

    <div class="mb-3">
        <label><strong>Khách hàng:</strong></label>
        <input value="@Model.User?.FullName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label><strong>Sản phẩm:</strong></label>
        <input value="@Model.Product?.ProductName" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label><strong>Số lượng:</strong></label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label><strong>Ngày thêm:</strong></label>
        <input value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" class="form-control" readonly />
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>
