@using System.IO
@model IEnumerable<Tuan06.Models.Product>

<h2>Danh sách sản phẩm</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Thêm sản phẩm</a>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>Khuyến mãi</th>
            <th>Hình ảnh</th>
            <th>Mô tả</th>
            <th>Danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.DiscountPrice</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ProductImage))
                    {
                        <img src="@Url.Content(item.ProductImage)" width="80" alt="@item.ProductName" />
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/no-image.png")" width="80" alt="No image" />
                    }
                </td>
                <td>@item.ProductDescription</td>
                <td>@item.CategoryID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xoá?');">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        <!-- Previous -->
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@(ViewBag.CurrentPage == 1 ? "#" : $"?page={ViewBag.CurrentPage - 1}")" tabindex="@(ViewBag.CurrentPage == 1 ? "-1" : "0")" aria-disabled="@(ViewBag.CurrentPage == 1 ? "true" : "false")">
                Previous
            </a>
        </li>

        <!-- Số trang -->
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "#" : $"?page={ViewBag.CurrentPage + 1}")" tabindex="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "-1" : "0")" aria-disabled="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "true" : "false")">
                Next
            </a>
        </li>

    </ul>
</nav>