@model Tuan06.Models.Category

<h2>Thêm danh mục mới</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryDescription"></label>
        <textarea asp-for="CategoryDescription" class="form-control"></textarea>
        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryStatus"></label>
        <select asp-for="CategoryStatus" class="form-control">
            <option value="true">Hiển thị</option>
            <option value="false">Ẩn</option>
        </select>
        <span asp-validation-for="CategoryStatus" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-default">Quay lại</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}