@model IEnumerable<Tuan06.Models.Category>

<h2>Danh sách danh mục</h2>
<a asp-action="Create" class="btn btn-success mb-3">+ Thêm danh mục</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.CategoryID</td>
                <td>@cat.CategoryName</td>
                <td>@cat.CategoryDescription</td>
                <td>

                    @(cat.CategoryStatus ? "Hiển thị" : "Ẩn")
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        <!-- Previous -->
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@(ViewBag.CurrentPage == 1 ? "#" : $"?page={ViewBag.CurrentPage - 1}")" tabindex="@(ViewBag.CurrentPage == 1 ? "-1" : "0")" aria-disabled="@(ViewBag.CurrentPage == 1 ? "true" : "false")">
                Previous
            </a>
        </li>

        <!-- Số trang -->
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="?page=@i">@i</a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "#" : $"?page={ViewBag.CurrentPage + 1}")" tabindex="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "-1" : "0")" aria-disabled="@(ViewBag.CurrentPage == ViewBag.TotalPages ? "true" : "false")">
                Next
            </a>
        </li>

    </ul>
</nav>