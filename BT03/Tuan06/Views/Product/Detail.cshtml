@model Dictionary<string, object>
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
<div class="container mt-4">
    <h2>@Model["ProductName"]</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="/@Model["ProductImage"]" class="img-fluid" style="max-height:400px;object-fit:cover" alt="@Model["ProductName"]" />
        </div>
        <div class="col-md-6">
            <p>@Model["ProductDescription"]</p>
            <p>
                Giá gốc: <del>@Model["Price"] đ</del><br />
                Giá KM: <strong style="color:red">@Model["DiscountPrice"] đ</strong>
            </p>
            <form asp-controller="Cart" asp-action="Add" method="get">
                <input type="hidden" name="id" value="@Model["ProductID"]" />
                <label>Số lượng:</label>
                <input type="number" name="qty" value="1" min="1" class="form-control mb-2" style="width:100px" />
                <button type="submit" class="btn btn-success">Thêm vào giỏ</button>
            </form>
        </div>
    </div>
</div>
