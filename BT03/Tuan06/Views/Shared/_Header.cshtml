<header>
	<script src="/user/js/responsiveslides.min.js"></script>
	<script>
		$(function () {
		  $("#slider").responsiveSlides({
			auto: true,
			nav: true,
			speed: 500,
			namespace: "callbacks",
			pager: false,
		  });
		});
	</script>

	<div class="header-top">
		<div class="header-bottom">
			<div class="logo">
				<h1><a asp-area="" asp-controller="Home" asp-action="Index">Đèn T&A</a></h1>
			</div>
			<!---->
			<div class="top-nav">
				<ul class="memenu skyblue">
					<li class="grid"><a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
					<li class="grid"><a asp-area="" asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
					<li class="grid"><a asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
				</ul>
			</div>
			<!---->

			<div class="cart box_1">
				@{
					var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
					var cartTotal = Context.Session.GetString("CartTotal") ?? "0";
				}
				<a asp-area="" asp-controller="Cart" asp-action="Index">
					<div class="total">
						@cartTotal (@cartCount)đ
					</div>
					<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
				</a>
				<div class="clearfix"> </div>
				<!--Khải_ giao diện đăng nhập/đăng xuất-->
				<div class="user-login" style="margin-left:20px;">
					@{
						var username = Context.Session.GetString("User");
						if (string.IsNullOrEmpty(username))
						{
							<a asp-controller="Login" asp-action="Index" class="btn btn-link">Đăng nhập</a>
						}
						else
						{
							<span>Xin chào, <strong>@username</strong>!</span>
							<a asp-controller="Login" asp-action="Logout" class="btn btn-link text-danger">Đăng xuất</a>
						}
					}
				</div>
				<!--end khải-->
			</div>

			<!-------->
			<div class="clearfix"> </div>
			<!---->
		</div>

		<div class="clearfix"> </div>

	</div>

</header>