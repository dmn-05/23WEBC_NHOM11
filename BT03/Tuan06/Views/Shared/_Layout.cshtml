<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewData["Title"]</title>
	<link href="/user/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
	<!-- Custom Theme files -->
	<!--theme style-->
	<link href="/user/css/style.css" rel="stylesheet" type="text/css" media="all" />
	<script src="/user/js/jquery.min.js"></script>

	<!--//theme style-->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="Wedding Store Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- start menu -->
	<script src="/user/js/simpleCart.min.js"> </script>
	<!-- start menu -->
	<link href="/user/css/memenu.css" rel="stylesheet" type="text/css" media="all" />
	<script type="text/javascript" src="/user/js/memenu.js"></script>
	<script>$(document).ready(function(){$(".memenu").memenu();});</script>
</head>
<body>
	<header>
		<script src="/user/js/responsiveslides.min.js"></script>
		<script>
			$(function () {
			  $("#slider").responsiveSlides({
				auto: true,
				nav: true,
				speed: 500,
				namespace: "callbacks",
				pager: false,
			  });
			});
		</script>

		<div class="header-top">
			<div class="header-bottom">
				<div class="logo">
					<h1><a asp-area="" asp-controller="Home" asp-action="Index">Đèn T&A</a></h1>
				</div>
				<!---->
				<div class="top-nav">
					<ul class="memenu skyblue">
						<li class="grid"><a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
						<li class="grid"><a asp-area="" asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
						<li class="grid"><a asp-area="" asp-controller="Product" asp-action="Index">Danh mục</a></li>
						<li class="grid"><a asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
					</ul>
				</div>
				<!---->
				
				<div class="cart box_1">
					@{
						var cartCount = Context.Session.GetInt32("CartCount") ?? 0;
						var cartTotal = Context.Session.GetString("CartTotal") ?? "0";
					}
					<a asp-area="" asp-controller="Cart" asp-action="Index">
						<div class="total">
							@cartTotal (@cartCount)đ
						</div>
						<span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
					</a>
					<div class="clearfix"> </div>
					<!--Khải_ giao diện đăng nhập/đăng xuất-->
					<div class="user-login" style="margin-left:20px;">
						@{
							var username = Context.Session.GetString("User");
							if (string.IsNullOrEmpty(username))
							{
								<a asp-controller="Login" asp-action="Index" class="btn btn-link">Đăng nhập</a>
							}
							else
							{
								<span>Xin chào, <strong>@username</strong>!</span>
								<a asp-controller="Login" asp-action="Logout" class="btn btn-link text-danger">Đăng xuất</a>
							}
						}
					</div>
					<!--end khải-->
				</div>
				
				<!-------->
				<div class="clearfix"> </div>
				<!---->
			</div>
			
			<div class="clearfix"> </div>
		
		</div>

		<!---->
		

	</header>
	@RenderBody();
	<!---->
	<div class="subscribe">
		<div class="container">
			<h3>Đăng ký ngay bây giờ!!!</h3>
			<form>
				<input type="text" class="text" value="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}">
				<input type="submit" value="Đăng ký">
			</form>
		</div>
	</div>
	<!---->
	<div class="footer">
		<div class="container">
			<div class="footer-grids">
				<div class="col-md-3 ftr-grid">
					<h3>Thông tin</h3>
					<ul class="nav-bottom">
						<li><a href="#">Sản phẩm mới nhất</a></li>
						<li><a href="#">Sản phẩm bán chạy nhất</a></li>
						<li><a href="#">Đang giảm giá</a></li>
						<li><a href="#">Ưu đãi</a></li>
					</ul>
				</div>
				<div class="col-md-3 ftr-grid">
					<h3>Đèn T&A</h3>
					<ul class="nav-bottom">
						<li><a asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
						<li><a href="#">FAQ</a></li>
						<li><a asp-area="" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
						<li><a href="#">Giao hàng toàn quốc</a></li>
						<li><a href="#">Khách hàng thành viên</a></li>
					</ul>
				</div>
				<div class="col-md-3 ftr-grid">
					<h3>Danh mục</h3>
					<ul class="nav-bottom">
						<li><a href="#">Đèn Oto</a></li>
						<li><a href="#">Đèn Led</a></li>
						<li><a href="#">Đèn trang trí</a></li>
						<li><a href="#">Đèn treo tường</a></li>
						<li><a href="#">Đèn ngủ</a></li>
					</ul>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
	<div class="copywrite">
		<div class="container">
			<div class="copy">
				<p>©Copyright 2025 Công ty trách nhiệm hữu hạn T&A </p>
			</div>
			<div class="social">
				<a href="#"><i class="facebook"></i></a>
				<a href="#"><i class="twitter"></i></a>
				<a href="#"><i class="dribble"></i></a>
				<a href="#"><i class="google"></i></a>
				<a href="#"><i class="youtube"></i></a>
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</body>
</html>
