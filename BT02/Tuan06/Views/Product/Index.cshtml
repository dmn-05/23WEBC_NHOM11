@model IEnumerable<Tuan06.Models.Product>
<style>
  .product-img img {
    width: 100%; /* ảnh luôn full ngang */
    height: 250px; /* cố định chiều cao khung */
    object-fit: cover; /* phóng to, cắt ảnh để vừa khung */
    border-radius: 8px; /* bo góc cho đẹp (tuỳ chọn) */
  }
</style>
<div class="product-model">
  <div class="container">
    <h2>Our Products</h2>
    <div class="col-md-9 product-model-sec">
      @foreach (var item in Model) {
        <div class="product-grid">
          <a asp-controller="Product" asp-action="GetById" asp-route-id="@item.MaSP">
            <div class="more-product"><span></span></div>
            <div class="product-img b-link-stripe b-animate-go thickbox">
              <img src="@item.HinhAnh" alt="@item.TenSP" />
              <div class="b-wrapper">
                <h4 class="b-animate b-from-left b-delay03">
                  <button>
                    <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    Quick View
                  </button>
                </h4>
              </div>
            </div>
          </a>
          <div class="product-info simpleCart_shelfItem">
            <div class="product-info-cust prt_name">
              <h4>@item.TenSP</h4>
              <span class="item_price">
                <del style="color: gray; font-size:14px;">@item.DonGia.ToString("N0") đ</del>
                <strong style="color:red;">@item.DonGiaKhuyenMai.ToString("N0") đ</strong>
              </span>
              <input type="text" class="item_quantity" value="1" />
              <input type="button" class="item_add items" value="ADD" />
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</div>