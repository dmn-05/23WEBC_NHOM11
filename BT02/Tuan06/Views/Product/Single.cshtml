@model Tuan06.Models.Product
<div class="container mt-4">
    <h2>@Model.TenSP</h2>
    <div class="row">
        <div class="col-md-6">
            <img src="/@Model.HinhAnh" class="img-fluid" style="max-height:400px;object-fit:cover" alt="@Model.TenSP" />
        </div>
        <div class="col-md-6">
            <p>@Model.MoTa</p>
            <p>
                Giá gốc: <del>@Model.DonGia.ToString("N0") đ</del><br />
                Giá KM: <strong style="color:red">@Model.DonGiaKhuyenMai.ToString("N0") đ</strong>
            </p>
            <form asp-controller="Cart" asp-action="Add" method="get">
                <input type="hidden" name="id" value="@Model.MaSP" />
                <label>Số lượng:</label>
                <input type="number" name="qty" value="1" min="1" class="form-control mb-2" style="width:100px" />
                <button type="submit" class="btn btn-success">Thêm vào giỏ</button>
            </form>
        </div>
    </div>
</div>
