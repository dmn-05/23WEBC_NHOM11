@model UserListViewModel

<h2>Danh sách người dùng</h2>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Vai trò</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Password</td>
                <td>
                    @(user.Role == 1 ? "Admin" :
                                    user.Role == 2 ? "Editor" : "Viewer")
            </td>
        </tr>
                }
    </tbody>
</table>

<div style="margin-top:10px;">
    @if (Model.CurrentPage > 1)
    {
        <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Trang trước</a>
    }

    <span>Trang @Model.CurrentPage / @Model.TotalPages</span>

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Trang sau</a>
    }
</div>
